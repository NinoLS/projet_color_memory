<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".difficultyStart">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="3"
        app:rowCount="3">

        <TextView
            android:id="@+id/tv_vies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vies"
            android:textSize="20dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_niveau"
            android:text="@string/niveau"
            android:textSize="20dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="startDifficulte"
            android:text="@string/start"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_facile_haut"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_facile_gauche"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_facile_droit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_facile_bas"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"/>


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>